<?xml version="1.0" encoding="utf-8"?>
<com.acerolla.bouquiniste.presentation.profile.view.ProfileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:elevation="8dp">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@mipmap/ic_camera"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/iv_avatar"
        android:background="@drawable/edit_text_style"
        android:text="@string/sample_string" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/iv_avatar"
        android:background="@drawable/edit_text_style"
        android:text="@string/sample_string"
        android:textColor="@color/black"
        android:elevation="5dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_style"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/iv_avatar"
        android:textColor="@color/black"
        android:visibility="gone"
        android:text="авторизация"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/relative_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_1"
        android:background="@color/white"
        android:elevation="5dp">

    <ImageView
        android:id="@+id/iv_user_adverts"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_user_adverts"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Мои объявления:"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/iv_user_adverts"
        android:layout_alignTop="@+id/iv_user_adverts"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_adverts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_2"
        android:background="@color/white"
        android:layout_marginTop="10dp">

    </android.support.v7.widget.RecyclerView>

</com.acerolla.bouquiniste.presentation.profile.view.ProfileView>